<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5DC">

    <!-- EditText for input -->
    <EditText
        android:id="@+id/editTextLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số nguyên"
        android:inputType="number"
        android:text="100"
        android:layout_marginBottom="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="16dp" />

    <!-- RadioGroup for number types -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioOdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lẻ"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioEven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số chẵn" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioPrime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số nguyên tố" />

            <RadioButton
                android:id="@+id/radioSquare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số chính phương" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioPerfect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số hoàn hảo" />

            <RadioButton
                android:id="@+id/radioFibonacci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Fibonacci" />

        </LinearLayout>

    </RadioGroup>

    <!-- ListView for numbers -->
    <ListView
        android:id="@+id/listViewNumbers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp" />

    <!-- TextView for empty message -->
    <TextView
        android:id="@+id/textViewEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Không có số nào thỏa mãn"
        android:gravity="center"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>
