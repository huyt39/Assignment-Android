<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- avatar -->
    <TextView
        android:id="@+id/imageViewAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/circle_background" />

    <!-- icon mui ten vang -->
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_toEndOf="@+id/imageViewAvatar"
        android:layout_alignTop="@+id/imageViewAvatar"
        android:layout_marginStart="8dp"
        android:src="@android:drawable/arrow_down_float"
        android:tint="#FFC107" />

    <!-- ten nguoi gui -->
    <TextView
        android:id="@+id/textViewSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageViewAvatar"
        android:layout_alignTop="@+id/imageViewAvatar"
        android:layout_marginStart="24dp"
        android:layout_toStartOf="@+id/textViewTime"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- thoi gian -->
    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewSender"
        android:textSize="12sp"
        android:textColor="#757575"
        android:layout_marginStart="8dp" />

    <!-- tieu de -->
    <TextView
        android:id="@+id/textViewSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSender"
        android:layout_toEndOf="@+id/imageViewAvatar"
        android:layout_marginStart="24dp"
        android:layout_toStartOf="@+id/imageViewStar"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="#212121"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- preview noi dung -->
    <TextView
        android:id="@+id/textViewPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSubject"
        android:layout_toEndOf="@+id/imageViewAvatar"
        android:layout_marginStart="24dp"
        android:layout_toStartOf="@+id/imageViewStar"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="#757575"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- icon sao -->
    <ImageView
        android:id="@+id/imageViewStar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/btn_star_big_off"
        android:tint="#757575"
        android:layout_marginStart="8dp" />

</RelativeLayout>
